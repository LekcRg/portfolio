block scripts
	script(src='blog.bundle.js')

block heroContant
	h1.blog__title.title-strip Блог
	span.blog__description Статьи, которые я написал

block content
	section.blog
		h2.visually-hidden Блог
		aside.blog__aside
			button.blog__nav
			+nav('blog-nav', blogNav, 0)
		.blog__news
			each post in news
				article.blog-post
					header.blog-post__header
						h2.blog-post__title #{post[0]}
						time.blog-post__date #{post[1]}
					each text in post[2]
						p #{text}